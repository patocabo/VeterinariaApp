<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.InicioActivity">

    <TextView
        android:id="@+id/titulo_calendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="myVet"
        android:gravity="center"
        android:layout_margin="10sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="32sp" />

    <Button
        android:id="@+id/b_i_user"
        android:layout_margin="10sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Solicitar turno"
        />

    <Button
        android:id="@+id/b_i_vet"
        android:layout_margin="10sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ingreso veterinarios" />

    <Button
        android:id="@+id/b_i_adm"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" y=""
        android:text="Administracion" />

</LinearLayout>